<%= form_for @pin, html: { multipart: true } do |f| %>

<%= render '/layouts/pin_form_errors', locals: {user: @user} %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :image %> <br>
    <%= f.file_field :image %><br>
    <%= f.label :description %><br>
    <%= f.text_area :description %><br>
    Tags:

    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %><br>
    <%= f.fields_for :tags, @pin.tags.build do | tags_fields| %>
     <%= tags_fields.label :name %>
     <%= tags_fields.text_field :name %>
    <% end %>

     <%= f.hidden_field :user_id, value: current_user.id %>



    <%= f.submit %>


<% end %>
