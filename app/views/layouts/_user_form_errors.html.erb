<% if @user.errors.any? %>
<div class="flash-note">
  <div id="push-pin">
    <%= image_tag("push_pin.png") %>
  </div>
  <div class="row extra-padding">
    <div class="col-xs-2">
      <%= image_tag("reminder.png", id: 'reminder') %>
    </div>
  <div class="col-xs-9 col-xs-offset-1 error">
    <h4>Please fix the following <%= pluralize(@user.errors.count, "error") %>:</h4>
  <ul>
   <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
   <% end %>
  </ul>
 </div>


</div>
</div>
<% end %>
