  <%= render '/layouts/user_form_errors' %>

<div class="row row-centered">
    <div class="col-md-offset-4 col-md-4" id="top-pin">
    <div class="row">
      <div class ="col col-centered full-width">
        <div id="push-pin">
          <%= image_tag("push_pin.png") %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class ="col col-centered full-width col-padding">

<h2>Create an account</h2>
<hr  / />
<%= form_for @user do | f | %>




<p>
<%= f.text_field :username, placeholder: 'username', class: 'form-control input-lg' %>
</p>
<p>
<%= f.text_field :email, placeholder: 'email', class: 'form-control input-lg' %>
</p>
<p>


<%= f.password_field :password, placeholder: 'password', class: 'form-control input-lg' %>
</p>

<%= f.check_box :admin_request, {}, "submitted", "nil" %>
<%= f.label :admin_request, "Check box to request an admin account." %>


<br />
  <br />
<%= f.submit "Join", class: "comment-button" %>

<% end %>



</div>
</div>
</div>
</div>
