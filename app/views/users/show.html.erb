<% if @user.role == "user" %>

<div class="row row-centered">
    <div class="col-md-offset-4 col-md-4" id="top-pin">
    <div class="row">
      <div class ="col col-centered full-width">
        <div id="push-pin">
          <%= image_tag("push_pin.png") %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class ="col col-centered full-width col-padding">


        <% if current_user == nil || current_user.id != @user.id %>
          <h3><%=@user.username%>'s Profile</h3>
        <% else %>
          <h3>Welcome, <%= @user.username %></h3>
        <% end %>
         <hr />
         <ul>
          <li><%=@user.pins.count %> <%= link_to 'pins', user_pins_path(@user) %>.</li>
          <li><%=@user.comments.count %> comments.</li>
          <li><%=@user.pin_endorsements.count %> endorsements.</li>
        </ul>

      </div>
    </div>
  </div>
</div>
<%= render(@user.pins :partial => '/pins/pin')  %>


<% elsif @user.role == "admin" %>


<div class="row">
    <div class="col-md-4" id="admin-pin">
      <div id="push-pin">
        <%= image_tag("push_pin.png") %>
      </div>
      <h3>Admin Requests</h3>
      <hr />
      <ul class="comments">
      <%= render(@requests) %>
      </ul>
  </div>
</div>

<% end %>
